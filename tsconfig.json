{
	"compilerOptions": {
		"outDir": "./dist/",
		"strict": true,
		"module": "es6",
		"target": "es6",
		"jsx": "react",
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	},
	"typedocOptions": {
		"entryPoints": ["src/terra-draw.ts"],
		"exclude": ["src/geometry/**/*.ts", "src/test/**/*.ts", "src/util/**/*.ts"],
		"out": "docs",
		"skipErrorChecking": true
	}
}
